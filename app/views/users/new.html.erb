 <h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for(@user, url: signup_path) do |f| %> 

    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :email %>
    <%= f.email_field :email%><br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

