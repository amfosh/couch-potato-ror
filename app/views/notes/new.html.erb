<h1>Add a Note</h1>

<%= render partial: 'layouts/errors', locals: {object: @note} %>

<%= form_for(@note) do |f| %>
  <% if params[:show_id] %>
    <%= f.hidden_field :show_id %>
  <% else %>
    <div>
      <%= f.label :show_id, "Select a Show" %>
      <%= f.collection_select(:show_id, Show.all, :id, :show_title)%>
    </div>
  <% end %>
<div>
  <%= f.label :content %>
  <%= f.text_area :content, size: "30x2" %>
</div>
<%= f.submit "Add Note" %>
<% end %>