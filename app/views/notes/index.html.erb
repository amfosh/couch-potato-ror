<% if @show %>
  <h1>Notes for <%= @show.show_title%></h1>
<% else %>
<h1>All Notes</h1>
<% end %>
<% @notes.each do |note| %>
     <li>
        <h3><%= link_to note.show.show_title, show_note_path(note.show) %></h3>
        <p><%= note.content %>

<% end %>
</ul>
<p>Add a new note <%= link_to "here.", new_show_note_path %></p> 